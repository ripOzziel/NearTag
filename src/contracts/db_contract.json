{
    "users": {
      "type": "object",
      "required": ["username", "phone_number", "email", "password_u", "creation_date"],
      "properties": {
        "id": { "type": "string", "format": "uuid" },
        "username": { "type": "string", "minLength": 4, "maxLength": 30 },
        "phone_number": { "type": "string", "maxLength": 15 },
        "email": { "type": "string", "format": "email" },
        "password_u": { "type": "string", "minLength": 8, "maxLength": 60 },
        "device_id": { "type": ["string", "null"], "format": "uuid" },
        "creation_date": {
          "type": "string",
          "pattern": "^\\d{4}-\\d{2}-\\d{2} \\d{2}:\\d{2}:\\d{2}$"
        },
        "update_date": {
          "type": "string",
          "pattern": "^\\d{4}-\\d{2}-\\d{2} \\d{2}:\\d{2}:\\d{2}$"
        }
      }
    },
  
    "devices": {
      "type": "object",
      "required": ["name_device", "status_d"],
      "properties": {
        "id_device": { "type": "string", "format": "uuid" },
        "name_device": { "type": "string", "maxLength": 20 },
        "status_d": { "type": "string", "maxLength": 1 },
        "update_date": {
          "type": "string",
          "pattern": "^\\d{4}-\\d{2}-\\d{2} \\d{2}:\\d{2}:\\d{2}$"
        }
      }
    },
  
    "locations": {
      "type": "object",
      "required": ["id_device", "longitude", "latitude", "date_l"],
      "properties": {
        "id_device": { "type": "string", "format": "uuid" },
        "longitude": { "type": "number" },
        "latitude": { "type": "number" },
        "date_l": {
          "type": "string",
          "pattern": "^\\d{4}-\\d{2}-\\d{2} \\d{2}:\\d{2}:\\d{2}$"
        }
      }
    },
  
    "device_configuration": {
      "type": "object",
      "required": ["id_device", "device_name", "mac_address", "channel"],
      "properties": {
        "id_device": { "type": "string", "format": "uuid" },
        "device_name": { "type": "string", "maxLength": 25 },
        "mac_address": {
          "type": "string",
          "pattern": "^([0-9A-Fa-f]{2}[:-]){5}([0-9A-Fa-f]{2})$",
          "maxLength": 20
        },
        "channel": { "type": "integer" }
      }
    },
  
    "connection": {
      "type": "object",
      "required": ["id_usuario", "nombre_usuario_invitado", "id_device", "type_connection"],
      "properties": {
        "id_usuario": { "type": "string", "format": "uuid" },
        "nombre_usuario_invitado": { "type": "string" },
        "id_device": { "type": "string", "format": "uuid" },
        "type_connection": { "type": "string", "maxLength": 10 }
      }
    },
  
    "record": {
      "type": "object",
      "required": ["id_device", "longitude", "latitude", "date_r"],
      "properties": {
        "id_device": { "type": "string", "format": "uuid" },
        "longitude": { "type": "number" },
        "latitude": { "type": "number" },
        "date_r": {
          "type": "string",
          "pattern": "^\\d{4}-\\d{2}-\\d{2} \\d{2}:\\d{2}:\\d{2}$"
        }
      }
    }
  }
  