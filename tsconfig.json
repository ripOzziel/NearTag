{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",           
    "moduleResolution": "NodeNext", 
    "esModuleInterop": true,        
    "allowSyntheticDefaultImports": true,
    "strict": true,                 
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",               
    "rootDir": "/",               
    "skipLibCheck": true,
    "resolveJsonModule": true

  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}